<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>EcommerceSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

    <servlet>
    <servlet-name>SearchForm</servlet-name>
    <servlet-class>products.SearchForm</servlet-class>
    <init-param>
      <param-name>products</param-name>
      <param-value>iphone6, Samsung Galaxy 4, Nokia Lumia 1020</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchForm</servlet-name>
    <url-pattern>/SearchForm</url-pattern>
  </servlet-mapping>

    <servlet>
    <servlet-name>SearchResult</servlet-name>
    <servlet-class>products.SearchResult</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchResult</servlet-name>
    <url-pattern>/SearchResult</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ShoppingCart</servlet-name>
    <servlet-class>products.ShoppingCart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShoppingCart</servlet-name>
    <url-pattern>/ShoppingCart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controllers.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <res-ref-name>jdbc/ShoppingCart</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <login-config>
   <auth-method>FORM</auth-method>
   <form-login-config>
     <form-login-page>/login.html</form-login-page>
     <form-error-page>/login-error.html</form-error-page>
   </form-login-config>
 </login-config>
 <security-constraint>
   <web-resource-collection>
     <web-resource-name>protected</web-resource-name>
     <url-pattern>/SearchForm</url-pattern>
     <url-pattern>/SearchResult</url-pattern>
     <url-pattern>/ShoppingCart</url-pattern>
     <http-method>GET</http-method>
     <http-method>POST</http-method>
   </web-resource-collection>
   <auth-constraint>
     <role-name>user</role-name>
   </auth-constraint>
 </security-constraint>
 <security-constraint>
   <web-resource-collection>
     <web-resource-name>protected</web-resource-name>
     <url-pattern>/Admin/Orders</url-pattern>
     <url-pattern>/Admin/UpdateOrder</url-pattern>
     <http-method>GET</http-method>
     <http-method>POST</http-method>
   </web-resource-collection>
   <auth-constraint>
     <role-name>admin</role-name>
   </auth-constraint>
 </security-constraint>
 <security-role> <role-name>admin</role-name> </security-role>
 <security-role> <role-name>user</role-name> </security-role>
</web-app>
